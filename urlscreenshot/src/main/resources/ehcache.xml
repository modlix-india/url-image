<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.ehcache.org/v3"
    xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
    xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
                        http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">

    <!-- if using on windows machine create a temp folder in the root directory of the drive or give
    exact path -->
    <persistence directory="/tmp/cache" />

    <thread-pools>
        <thread-pool alias="defaultDiskPool" min-size="1" max-size="3" default="true" />
    </thread-pools>

    <cache alias="urlImageCache">
        <key-type>java.lang.String</key-type>
        <value-type>com.modlix.urlscreenshot.dto.URLImage</value-type>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="GB">1</offheap>
            <disk persistent="true" unit="GB">2</disk>
        </resources>
    </cache>

</config>